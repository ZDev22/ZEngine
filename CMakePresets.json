{
  "version": 3,
  "cmakeMinimumRequired": {"major": 3, "minor": 21},
  "configurePresets": [
    {
      "name": "linuxdebug",
      "displayName": "Linux Debug",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/linux/dbgcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_DEBUG": "-O1 -g2 -Wall -Wconversion -fdiagnostics-show-option -D_DEBUG",
        "CMAKE_CXX_FLAGS_DEBUG": "-O1 -g2 -Wall -Wconversion -fdiagnostics-show-option -D_DEBUG"
      }
    },
    {
      "name": "linuxrelease",
      "displayName": "Linux Release",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/linux/relcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS_RELEASE": "-march=westmere -Ofast -DNDEBUG -flto -fdiagnostics-show-option",
        "CMAKE_CXX_FLAGS_RELEASE": "-march=westmere -Ofast -DNDEBUG -flto -fdiagnostics-show-option"
      }
    },
    {
      "name": "linuxsmol",
      "displayName": "Linux Smol",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/linux/smolcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Smol",
        "CMAKE_C_FLAGS_RELEASE": "-Oz -DNDEBUG -fno-exceptions -fdiagnostics-show-option",
        "CMAKE_CXX_FLAGS_RELEASE": "-Oz -DNDEBUG -fno-exceptions -fdiagnostics-show-option"
      }
    },
    {
      "name": "macdebug",
      "displayName": "Mac Debug",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/mac/dbgcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_DEBUG": "-O1 -g2 -Wall -Wconversion -fdiagnostics-show-option -D_DEBUG",
        "CMAKE_CXX_FLAGS_DEBUG": "-O1 -g2 -Wall -Wconversion -fdiagnostics-show-option -D_DEBUG"
      }
    },
    {
      "name": "macrelease",
      "displayName": "Mac Release",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/mac/relcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS_RELEASE": "-march=westmere -Ofast -DNDEBUG -flto -fdiagnostics-show-option",
        "CMAKE_CXX_FLAGS_RELEASE": "-march=westmere -Ofast -DNDEBUG -flto -fdiagnostics-show-option"
      }
    },
    {
      "name": "macsmol",
      "displayName": "Mac Smol",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/mac/smolcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Smol",
        "CMAKE_C_FLAGS_RELEASE": "-Oz -DNDEBUG -fno-exceptions -fdiagnostics-show-option",
        "CMAKE_CXX_FLAGS_RELEASE": "-Oz -DNDEBUG -fno-exceptions -fdiagnostics-show-option"
      }
    },
    {
      "name": "windowsdebug",
      "displayName": "Windows Debug",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/windows/dbgcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_DEBUG": "-O1 -g2 -Wall -Wconversion -fdiagnostics-show-option -D_DEBUG",
        "CMAKE_CXX_FLAGS_DEBUG": "-O1 -g2 -Wall -Wconversion -fdiagnostics-show-option -D_DEBUG"
      }
    },
    {
      "name": "windowsrelease",
      "displayName": "Windows Release",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/windows/relcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS_RELEASE": "-march=westmere -Ofast -DNDEBUG -flto -fdiagnostics-show-option",
        "CMAKE_CXX_FLAGS_RELEASE": "-march=westmere -Ofast -DNDEBUG -flto -fdiagnostics-show-option"
      }
    },
    {
      "name": "windowssmol",
      "displayName": "Windows Smol",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/windows/smolcache",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Smol",
        "CMAKE_C_FLAGS_RELEASE": "-Oz -DNDEBUG -fno-exceptions -fdiagnostics-show-option",
        "CMAKE_CXX_FLAGS_RELEASE": "-Oz -DNDEBUG -fno-exceptions -fdiagnostics-show-option"
      }
    }
  ],
  "buildPresets": [
    {"name": "linuxdebug","configurePreset": "linuxdebug"},
    {"name": "linuxrelease","configurePreset": "linuxrelease"},
    {"name": "linuxsmol","configurePreset": "linuxsmol"},
    {"name": "macdebug","configurePreset": "macdebug"},
    {"name": "macrelease","configurePreset": "macrelease"},
    {"name": "macsmol","configurePreset": "macsmol"},
    {"name": "windowsdebug","configurePreset": "windowsdebug"},
    {"name": "windowsrelease","configurePreset": "windowsrelease"},
    {"name": "windowssmol","configurePreset": "windowssmol"}
  ]
}