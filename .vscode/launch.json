{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Linux Debug",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}/src",
      "program": "${workspaceFolder}/build/linux/Debug/main",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Linux Release",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
