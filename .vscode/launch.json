      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/mac/Debug/main",
      "args": [],
      "cwd": "${workspaceFolder}/src",
      "stopOnEntry": false,
      "initCommands": [
        "settings set target.process.thread.step-avoid-regexp ''"
      ]
    },
    {
